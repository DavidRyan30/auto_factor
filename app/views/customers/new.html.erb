<% provide(:title, 'New Part') %>
<h1>New Customer</h1>

    <div class="row">
      <div class="span6 offset3">

        <%= form_for @customer do |f| %>
          <%= f.label "Customer Name" %>
          <%= f.text_field :cust_name, autofocus: true %>
          <%= f.label "Address" %>
          <%= f.text_field :cust_address %>
          <%= f.label "Email" %>
          <%= f.text_field :cust_email %>
          <%= f.label "Phone" %>
          <%= f.text_field :cust_phone %>
          <%= f.submit "Create Customer", class: "btn btn-large btn-primary" %>
        <% end %>
      </div>
    </div>